{
	"name": "template_type_script",
	"version": "0.1.0",
	"description": "template repository for TypeScript",
	"main": "dist/index.js",
	"scripts": {
		"dev": "ts-node src/index.ts",
		"dev:watch": "ts-node-dev --respawn src/index.ts",
		"clean": "rimraf dist/*",
		"tsc": "tsc",
		"build": "npm-run-all clean lint:fix tsc",
		"start": "node .",
		"check-types": "tsc --noEmit",
		"eslint": "eslint src/**/*.ts",
		"eslint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write 'src/**/*.{js,ts,json}'",
		"lint": "npm-run-all eslint check-types",
		"lint:fix": "npm-run-all eslint:fix check-types format"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gsy0911/midget.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/gsy0911/midget/issues"
	},
	"homepage": "https://github.com/gsy0911/midget#readme",
	"devDependencies": {
		"@types/node": "^15.12.2",
		"@types/react": "^17.0.11",
		"@types/react-dom": "^17.0.7",
		"@types/react-redux": "^7.1.16",
		"electron": "^13.1.2",
		"electron-builder": "^22.10.5",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.2"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.ts": "tsc --noEmit",
		"*.{js,ts,json}": "prettier --write"
	},
	"files": [
		"dist/**/*"
	],
	"dmg": {
		"contents": [
			{
				"x": 410,
				"y": 150,
				"type": "link",
				"path": "/Applications"
			},
			{
				"x": 130,
				"y": 150,
				"type": "file"
			}
		]
	},
	"mac": {
		"icon": "./src/icon/mac_icon.icns",
		"target": [
			"dmg"
		]
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.4",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"redux": "^4.1.0",
		"reset-css": "^5.0.1"
	}
}
